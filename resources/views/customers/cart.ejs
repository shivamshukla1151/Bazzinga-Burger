<section class="cart py-16">
    <% if(session.cart) { %>
    <div class="order container mx-auto w-1/2">
        <div class="flex item-center border-b border-grey-300 pb-4">
            <img src="/img/cart-black.png" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order summary</h1>
        </div>
        <div class="pizza-list">
            <% for(let burger of Object.values(session.cart.items)){ %>
            <div class="flex item-center my-8">
                <img class = "w-24" src="/img/<%= burger.item.image%>" alt="">
                <div class=" flex-1 ml-4">
                    <h1><%= burger.item.name%></h1>
                    <span><%= burger.item.size%></span>
                </div>
                <span class="flex-1 "><%= burger.qty%></span>
                <span class="font-bold text-lg">â‚¹<%= burger.item.price * burger.qty%></span>
            </div>
            <% } %>
            
        </div>
        <hr>
        <div class="text-right py-4 ">
            <div>
                <span color="text-lg font-bold">Total Amount: </span>
                <span class="amount text-2xl font-bold ml-2">â‚¹<%= session.cart.totalPrice%></span>
            </div><% if(user) { %>
            <div>
                <form action="/orders" method="post" class="mt-12">
                    <input name="phone" class="border-grey-400 border p-2 w-1/2 mb-4" type="text" placeholder="Phone number">
                    <input name="address"  class="border-grey-400 border p-2 w-1/2 " type="text" placeholder="Address">
                    <div>
                        <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Order Now</button>
                    </div>
                </form>
            </div>
            <% } else { %>
            <a class=" inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" href="/login">Login to continue
            </a>
            <% } %>
        </div>
    </div>
    <%} else {%>
    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
          <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜•</h1>
          <p class="mb-12 text-gray-500 text-lg">You probably haven't ordered a pizza yet.<br>
              To order a pizza, go to the main page.</p>
              <img class="w-2/5 mx-auto"src="/img/empty-cart.png" alt="empty-cart">
              <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go back</a>
        </div>     
    </div>
    <%}%>
</section>